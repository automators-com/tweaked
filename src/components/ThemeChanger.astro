---
const themes = ["automators", "light", "dark", "cupcake", "garden"];
---

<div class="dropdown mb-72" data-choose-theme>
  <div tabindex="0" role="button" class="btn m-1">
    Theme
    <svg
      width="12px"
      height="12px"
      class="h-2 w-2 fill-current opacity-60 inline-block"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 2048 2048"
      ><path d="M1799 349l242 241-1017 1017L7 590l242-241 775 775 775-775z"
      ></path></svg
    >
  </div>
  <ul
    tabindex="0"
    class="dropdown-content z-[1] p-2 shadow-2xl bg-base-300 rounded-box w-52"
  >
    {
      themes.map((theme) => {
        return (
          <li>
            <button
              name="theme-dropdown"
              class="theme-controller capitalize btn btn-sm btn-block btn-ghost justify-start"
              aria-label={theme}
              data-set-theme={theme}
            >
              {theme}
            </button>
          </li>
        );
      })
    }
  </ul>
</div>
