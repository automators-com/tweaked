---
import Layout from "../layouts/Layout.astro";
import ThemeChanger from "../components/ThemeChanger.astro";
import Navbar from "../components/Navbar.astro";
import Titlebar from "../components/TitleBar.astro";
import ServerSetting from "../components/serverSetting";
---

<Layout title="Tweaked">
  <Navbar />
  <main>
    <Titlebar />
    <div class="mt-4 flex flex-col items-start justify-start gap-y-4">
      <ServerSetting client:only="react" />
      <label class="form-control w-full max-w-xs">
        <div class="label">
          <span class="label-text-alt">Theme preference</span>
        </div>
        <ThemeChanger />
      </label>
    </div>
  </main>
</Layout>
