{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "local": true,
  "permissions": [
    "window:default",
    "window:allow-start-dragging",
    "path:default",
    "event:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "dialog:default",
    "dialog:allow-ask",
    "dialog:allow-message",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install"
  ]
}
