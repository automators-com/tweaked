{
  "name": "tweaked",
  "description": "Fine tune your data.",
  "author": "Automators",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "format:frontend": "prettier --ignore-path ./.prettierignore --write \"**/*.+(js|jsx|tsx|ts|astro|json)\"",
    "format:rust": "cd src-tauri && cargo fmt && cd ..",
    "format": "pnpm run format:frontend && pnpm run format:rust",
    "astro": "astro",
    "tauri": "tauri",
    "server:dev": "cd server && uvicorn main:app --reload",
    "server": "cd server && uvicorn main:app",
    "server:install": "python3 -m venv .venv && source .venv/bin/activate && pip install -r ./server/requirements.txt"
  },
  "dependencies": {
    "@astrojs/tailwind": "^5.1.0",
    "@tailwindcss/typography": "^0.5.13",
    "@tauri-apps/api": "^1.5.6",
    "@tauri-apps/cli": "2.0.0-beta.20",
    "astro": "^4.9.2",
    "daisyui": "^4.11.1",
    "tailwindcss": "^3.4.3",
    "theme-change": "^2.5.0"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.14.0",
    "prettier-plugin-rust": "^0.1.9"
  }
}
